<script type="text/javascript">
	$(document).ready(function(){
		if(serverunlock["bank_enabled"]==0)
		{
			$('#bank_button').hide();
		}
		if(serverunlock["patent_enabled"]==0)
		{
			$('#patent_button').hide();
		}
	});
</script>
<div id="location_market" class="location">
	<input type="button" id="market_button" />
	<input type="button" id="bank_button" />
	<input type="button" id="patent_button" />
	<div id="market_box">
		<div id="main_shop">
			<div id="viewbuyshop" class="tab button">ดูร้านรับซื้อ</div>
			<div id="viewsellshop" class="tab button">ดูร้านขาย</div>
			<div id="setbuyshop" class="tab button">ตั้งร้านรับซื้อ</div>
			<div id="setsellshop" class="tab button">ตั้งร้านขาย</div>
		</div>
		<div id="shop_content">
			<div id="shop_content_viewbuy" class="market_component">
			</div>
			<div id="shop_content_viewsell" class="market_component">
			</div>
			<div id="sellshop_box" class="market_component component">
					<!--<label for="sell_box_slots">ไอเท็ม</label>-->
					<div id="sell_box_slots" class="item_list"></div>
					<div style="padding: 4px;"><label for="sell_box_value">ราคา&nbsp;</label><input type="text" name="price" id="sell_box_value" value="0"/></div>
					<div style="padding: 4px;"><input type="button" id="sell_box_submit" value="ตั้งขาย"/></div>
			</div>
			<div id="buyshop_box" class="market_component component">
			    <div>ไอเท็ม&nbsp;<select id="buy_box_slots"></select></div>
